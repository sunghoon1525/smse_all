<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_gravity="center"
        android:layout_marginLeft="189dp"
        android:layout_marginTop="20dp"
        android:text="채널"
        android:textSize="20dp"></TextView>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="170dp"
        android:layout_marginTop="26dp"
        android:src="@drawable/channel"
        >
    </ImageView>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="360dp"
        android:layout_marginTop="26dp"
        android:background="@color/white"
        android:src="@drawable/plus"
        android:text="채널"></ImageButton>

    <Button
        android:layout_width="350dp"
        android:layout_height="100dp"
        android:layout_marginLeft="22dp"
        android:layout_marginTop="185dp"
        android:backgroundTint="@color/white"
        android:drawableLeft="@drawable/notice"
        android:text="공지"
        android:textColor="@color/black"
        android:textSize="30dp">
    </Button>

    <Button
        android:layout_width="350dp"
        android:layout_height="100dp"
        android:layout_marginLeft="22dp"
        android:layout_marginTop="295dp"
        android:backgroundTint="@color/white"
        android:drawableLeft="@drawable/marketing"
        android:text="공지"
        android:textColor="@color/black"
        android:textSize="30dp">
    </Button>

    <Button
        android:layout_width="350dp"
        android:layout_height="100dp"
        android:layout_marginLeft="22dp"
        android:layout_marginTop="405dp"
        android:backgroundTint="@color/white"
        android:drawableLeft="@drawable/club"
        android:text="동아리"
        android:textColor="@color/black"
        android:textSize="30dp">
    </Button>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/black"
        app:itemIconTint="@color/white"
        app:itemTextColor="#f6d170"
        app:labelVisibilityMode="labeled"
        app:menu="@menu/bottom_menu">

    </com.google.android.material.bottomnavigation.BottomNavigationView>

</RelativeLayout>